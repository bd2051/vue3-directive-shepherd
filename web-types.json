{
    "$schema": "https://raw.githubusercontent.com/JetBrains/web-types/master/v2-preview/web-types.json",
    "name": "vue3-directive-shepherd",
    "framework": "vue",
    "version": "1.0.2",
    "contributions": {
        "html": {
            "vue-directives": [
                {
                    "name": "tour-step",
                    "description": "Shepherd tour step",
                    "attribute-value": {
                        "required": true
                    },
                    "argument": {
                        "name": "step number",
                        "description": "Step number of Shepherd tour",
                        "required": true,
                        "pattern": "[0-9]+"
                    }
                }
            ]
        }
    }
}
